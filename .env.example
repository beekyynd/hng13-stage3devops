# Blue/Green Pool Configuration
ACTIVE_POOL=blue

# Docker Images
BLUE_IMAGE=your-app:blue-v1.0.0
GREEN_IMAGE=your-app:green-v1.0.1

# Release IDs (for tracking)
RELEASE_ID_BLUE=v1.0.0
RELEASE_ID_GREEN=v1.0.1

# Slack Alert Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Alert Thresholds
ERROR_RATE_THRESHOLD=2
WINDOW_SIZE=200
ALERT_COOLDOWN_SEC=300

# Maintenance Mode (set to true to suppress failover alerts during planned toggles)
MAINTENANCE_MODE=false
